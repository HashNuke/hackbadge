<%- content_for :header do %>
  <%= stylesheet_link_tag "new_event" %>
<%- end %>

<div id="form">
<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :name, :class=>"createInput" %>
  <br/>
  <%= f.text_field :slug, :class=>"createInput" %>
  <br/>
  <%= f.date_select :start_date, :class=>"l" %>
  <%= f.date_select :end_date, :class=>"l" %>
  

  <div class="actions">
    <%= f.submit :class=>"createSubmit", :value=>"Create hackathon" %>
  </div>
<% end %>
</div>
