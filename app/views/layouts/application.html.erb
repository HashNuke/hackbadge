<head>
  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Hack Badge: This stuff is for hackers.</title>
  <meta name="description" content="Hack Badge allows you to create event specific pages for
    hackathons.">
  <meta name="author" content="Hack Badge Team">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>

  <!-- CSS: implied media="all" -->
  <%= stylesheet_link_tag "style" %>
  <%= javascript_include_tag "modernizr", "scripts" %>

  <%= yield(:header) %>

  <%= csrf_meta_tags %>

</head>

<body>

  <div id="container">
    <header>
      <div class="wrap">
        <div class="left">
          <%= link_to image_tag("hackbadge.png"), root_path %>
        </div>
        <div class="right">
          <p>
            <a href="/auth/github">
              <% if current_user %>
                Welcome <%= current_user.name %>!
                <%= link_to "Logout", logout_path %>
              <% else %>
                Login with GitHub <%= image_tag("github.png") %>
              <% end %>
            </a>
          </p>
        </div>
      </div>
    </header>

    <%= yield %>

    </div> <!--! end of #container -->
    <div id="footer">
      <p>With Blood, sweat and sleep... 
      <%= link_to "Roshan", "http://twitter.com/roshanvid" %>,
      <%= link_to "Akash", "http://twitter.com/hashnuke" %> and <%= link_to "Nagarjun", "http://twitter.com/palavalli" %> production. No copyright exists.</p>
    </div>
    
  
    <!--[if lt IE 7 ]>
